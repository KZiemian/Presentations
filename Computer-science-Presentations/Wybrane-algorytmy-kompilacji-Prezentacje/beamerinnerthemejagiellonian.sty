\newcommand{\jagiellonian@block}[1]{
  \par\vskip\medskipamount%
  \setlength{\parskip}{0pt}
  \ifbeamercolorempty[bg]{block title#1}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}}{%
  \ifbeamercolorempty[bg]{block title}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}%
  }%
  {%
    \begin{beamercolorbox}[
      sep=\dimexpr\jagiellonian@blocksep-\jagiellonian@blockadjust\relax,
      leftskip=\jagiellonian@blockadjust,
      rightskip=\dimexpr\jagiellonian@blockadjust plus 4em\relax
    ]{block title#1}%
  }}%
      \usebeamerfont*{block title#1}%
      \jagiellonian@strut%
      \insertblocktitle%
      \jagiellonian@strut%
  \end{beamercolorbox}%
  \nointerlineskip%
  \ifbeamercolorempty[bg]{block body#1}{%
    \begin{beamercolorbox}[vmode]{block body#1}}{
  \ifbeamercolorempty[bg]{block body}{%
    \begin{beamercolorbox}[vmode]{block body#1}%
  }{%
    \begin{beamercolorbox}[sep=\jagiellonian@blocksep, vmode]{block body#1}%
    \vspace{-\jagiellonian@parskip}
  }}%
      \usebeamerfont{block body#1}%
      \setlength{\parskip}{\jagiellonian@parskip}%
}
