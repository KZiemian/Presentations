\newcommand{\cuboid}[6]{
  \def\xcoor{#1}
  \def\ycoor{#2}
  \def\zcoor{#3}
  \def\xside{#4}
  \def\yside{#5}
  \def\zside{#6}

  \fill[color=gray] (\xcoor+\xside,\ycoor,\zcoor)
  -- (\xcoor+\xside,\ycoor,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor+\yside,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor+\yside,\zcoor) -- cycle;

  \fill[color=gray!50!white] (\xcoor,\ycoor+\yside,\zcoor)
  -- (\xcoor,\ycoor+\yside,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor+\yside,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor+\yside,\zcoor) -- cycle;

  \fill[color=gray!80!white]
  (\xcoor,\ycoor,\zcoor+\zside)
  -- (\xcoor,\ycoor+\yside,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor+\yside,\zcoor+\zside)
  -- (\xcoor+\xside,\ycoor,\zcoor+\zside) -- cycle}




